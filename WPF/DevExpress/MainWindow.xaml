<dx:ThemedWindow
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" 
    x:Class="MainWindow"
    Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <dxwui:HamburgerMenu>
            
            <dxwui:HamburgerMenu.BottomBarItems>
                <dxwui:HamburgerMenuBottomBarNavigationButton Content="Settings" GlyphHeight="16" GlyphWidth="16"/>
                <dxwui:HamburgerMenuBottomBarNavigationButton Content="About" GlyphHeight="16" GlyphWidth="16"/>
            </dxwui:HamburgerMenu.BottomBarItems>
            <dxwui:HamburgerMenu.Content>
                <dxwui:NavigationFrame x:Name="NavigationFrame"/>
            </dxwui:HamburgerMenu.Content>
            <dxwui:HamburgerMenuNavigationButton Content="Ana Sayfa" GlyphHeight="16" GlyphWidth="16" IsSelected="True"/>
            <dxwui:HamburgerMenuNavigationButton Content="Kategoriler" GlyphHeight="16" GlyphWidth="16" Click="Kategoriler_Click"/>
            <dxwui:HamburgerMenuNavigationButton Content="Ürünler" GlyphHeight="16" GlyphWidth="16" Click="Urunler_Click"/>
        </dxwui:HamburgerMenu>
    </Grid>


</dx:ThemedWindow>
